<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calender2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 自定义浅色主题 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        
        <!-- 文字颜色 -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        
        <!-- 适当的阴影和渐变 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- 基础应用主题 -->
    <style name="Theme.Calender2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">shortEdges</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        
        <!-- 浅色主题的添加项 -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        
        <!-- 减少阴影，降低动画效果 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>